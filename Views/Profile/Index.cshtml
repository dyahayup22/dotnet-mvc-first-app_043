@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <!-- Cover Header -->
    <div style="height:150px; background:linear-gradient(135deg,#ff9a9e 0%,#fecfef 100%);
                border-radius:15px; position:relative;">
    </div>

    <div class="card mt-n5"
         style="max-width: 450px; margin: auto; border:none; border-radius:20px;
                box-shadow:0 8px 25px rgba(255,182,193,0.5);">
        <div class="card-body text-center">
            <!-- Foto Profile -->
            <img class="rounded-circle shadow-lg mb-3 border border-3 border-white"
                 src="https://i.pinimg.com/736x/2f/f5/11/2ff511ddf701691c141c93c65ceaf58a.jpg"
                 alt="User profile picture"
                 style="width:120px; height:120px; object-fit:cover; margin-top:-70px;">

            <!-- Nama -->
            <h4 class="mb-0" style="color:#e75480;">Dyah Ayu Puspitosari</h4>
            <p class="text-muted">🌸 Software Engineer 🌸</p>

            <!-- Social Links -->
            <div class="mb-3">
                <a href="#" class="text-secondary mx-2"><i class="fab fa-github fa-lg"></i></a>
                <a href="#" class="text-primary mx-2"><i class="fab fa-linkedin fa-lg"></i></a>
                <a href="#" class="text-danger mx-2"><i class="fab fa-instagram fa-lg"></i></a>
            </div>

            <hr>

            <!-- Data Info -->
            <div class="d-flex justify-content-around text-center">
                <div>
                    <i class="fas fa-users" style="color:#e75480;"></i>
                    <p class="mb-0"><strong>Followers</strong></p>
                    <span style="color:#ff69b4;">1,322</span>
                </div>
                <div>
                    <i class="fas fa-user-plus" style="color:#e75480;"></i>
                    <p class="mb-0"><strong>Following</strong></p>
                    <span style="color:#ff69b4;">543</span>
                </div>
                <div>
                    <i class="fas fa-handshake" style="color:#e75480;"></i>
                    <p class="mb-0"><strong>Friends</strong></p>
                    <span style="color:#ff69b4;">13,287</span>
                </div>
            </div>

            <hr>

            <!-- Action Buttons -->
            <div>
                <button class="btn btn-sm btn-pink" style="background:#ff69b4; color:white; border-radius:20px;">Follow</button>
                <button class="btn btn-sm btn-outline-pink" style="color:#ff69b4; border:1px solid #ff69b4; border-radius:20px;">Message</button>
            </div>
        </div>
    </div>
</div>
