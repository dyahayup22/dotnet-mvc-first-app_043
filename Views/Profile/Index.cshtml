@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Profile";
}

<div class="container mt-4">
    <h1 class="text-center " style="color:#e75480;"><strong>Profile</strong></h1>
    <div class="card mt-3"
         style="max-width: 400px; margin: auto; border:2px solid #ffc0cb; border-radius:20px;
                box-shadow:0 4px 15px rgba(255,182,193,0.6);
                background: linear-gradient(135deg, #ffe6f0 0%, #ffd6eb 50%, #fff0f5 100%);">
        <div class="card-body text-center">
            <!-- Foto Profile -->
            <img class="profile-user-img img-fluid img-circle mb-3"
                 src="https://adminlte.io/themes/v3/dist/img/user4-128x128.jpg"
                 alt="User profile picture"
                 style="width:120px; height:120px; object-fit:cover;">

            <!-- Nama -->
            <h4 class="mb-0" style="color:#ff69b4;">Bukan Ayu</h4>
            <p class="text-muted">🌸 Software Engineer 🌸</p>

            <hr style="border-top:2px dashed #ffb6c1;">

            <!-- Data Info -->
            <div class="d-flex justify-content-between px-3 py-2">
                <span style="color:#e75480;"><strong>Followers</strong></span>
                <span style="color:#ff69b4;">1,322</span>
            </div>
            <div class="d-flex justify-content-between px-3 py-2">
                <span style="color:#e75480;"><strong>Following</strong></span>
                <span style="color:#ff69b4;">543</span>
            </div>
            <div class="d-flex justify-content-between px-3 py-2">
                <span style="color:#e75480;"><strong>Friends</strong></span>
                <span style="color:#ff69b4;">13,287</span>
            </div>
        </div>
    </div>
</div>
