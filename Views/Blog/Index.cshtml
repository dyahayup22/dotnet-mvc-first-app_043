@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Blog Page";
}

<div class="container mt-5">
    <h1 class="fw-bold text-center mb-4" style="color:#d63384;">📝 Cute Blog Posts</h1>
    <p class="text-center text-muted mb-5">Tempat curhat, cerita random, dan info lucu 💖</p>

    <div class="row">
        <!-- Post 1 -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0" style="background-color:#fff0f6;">
                <img src="https://www.rekoforest.org/wp-content/uploads/2020/12/rer-honey-bee-e1608707315905.jpg" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                    <h5 class="card-title fw-bold" style="color:#d63384;">🐱 Hewan Pekerja Keras</h5><br />
                    <p class="card-text">
                        Semangat ya Pak Bee💕
                    </p>
                    <button class="btn btn-sm" style="background-color:#d63384; color:white;">❤️ Like</button>
                    <button class="btn btn-sm btn-outline-pink ms-2" style="border:1px solid #d63384; color:#d63384;">💬 Comment</button>
                </div>
            </div>
        </div>

        <!-- Post 2 -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0" style="background-color:#ffe4f0;">
                <img src="https://placebear.com/600/300" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                    <h5 class="card-title fw-bold" style="color:#d63384;">🌸 Piknik Cantik di Taman</h5><br />
                    <p class="card-text">
                        Piknik bareng temen-temen sambil makan bekal, duduk di rumput hijau, super relaxing 💕
                    </p>
                    <button class="btn btn-sm" style="background-color:#d63384; color:white;">❤️ Like</button>
                    <button class="btn btn-sm btn-outline-pink ms-2" style="border:1px solid #d63384; color:#d63384;">💬 Comment</button>
                </div>
            </div>
        </div>

        <!-- Post 3 -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0" style="background-color:#fff0f6;">
                <img src="https://placekitten.com/601/300" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                    <h5 class="card-title fw-bold" style="color:#d63384;">☕ Minum </h5><br />
                    <p class="card-text">
                        Ngetik kode sambil ditemani latte hangat itu vibes banget buat produktif 🔥
                    </p>
                    <button class="btn btn-sm" style="background-color:#d63384; color:white;">❤️ Like</button>
                    <button class="btn btn-sm btn-outline-pink ms-2" style="border:1px solid #d63384; color:#d63384;">💬 Comment</button>
                </div>
            </div>
        </div>

        <!-- Post 4 -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm border-0" style="background-color:#ffe4f0;">
                <img src="https://placebear.com/601/300" class="card-img-top" alt="Blog Image">
                <div class="card-body">
                    <h5 class="card-title fw-bold" style="color:#d63384;">🎶 Playlist Santai Malam</h5><br />
                    <p class="card-text">
                        Malem-malem dengerin musik chill vibes🌙✨
                    </p>
                    <button class="btn btn-sm" style="background-color:#d63384; color:white;">❤️ Like</button>
                    <button class="btn btn-sm btn-outline-pink ms-2" style="border:1px solid #d63384; color:#d63384;">💬 Comment</button>
                </div>
            </div>
        </div>
    </div>
</div>
