@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5 mb-5">
    <div class="text-center">
        <h2 class="fw-bold mb-3" style="color:#d63384;">🌸 Selamat Datang di Dashboard 🌸</h2>
        <p class="text-muted fs-5">Haiii, Always be happy yaa!! 🌷✨</p>
    </div>

    <div class="row mt-5 g-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100"
                 style="background: linear-gradient(135deg, #ffe4f0, #ffcce1); border-radius: 20px;">
                <div class="card-body py-5">
                    <h5 class="card-title mb-3">👩‍💻 Users</h5><br />
                    <p class="card-text display-4 fw-bold text-pink mb-2">1,250</p>
                    <small class="text-muted">Total Registered</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100"
                 style="background: linear-gradient(135deg, #fff0f6, #ffdeeb); border-radius: 20px;">
                <div class="card-body py-5">
                    <h5 class="card-title mb-3">📂 Projects</h5><br />
                    <p class="card-text display-4 fw-bold text-pink mb-2">87</p>
                    <small class="text-muted">Active Projects</small>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100"
                 style="background: linear-gradient(135deg, #ffe6f3, #ffd6e9); border-radius: 20px;">
                <div class="card-body py-5">
                    <h5 class="card-title mb-3">📝 Tasks</h5><br />
                    <p class="card-text display-4 fw-bold text-pink mb-2">340</p>
                    <small class="text-muted">Pending Tasks</small>
                </div>
            </div>
        </div>
    </div>
</div>

