@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mt-5">
    <h2 class="fw-bold" style="color:#d63384;">🌸 Selamat Datang di Dashboard 🌸</h2>
    <p class="text-muted">Haiii, Be happy yaa!! 🌷✨</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #ffe4f0, #ffcce1);">
                <div class="card-body">
                    <h5 class="card-title">👩‍💻 Users</h5>
                    <p class="card-text display-3 fw-bold text-pink">1,250</p>
                    <small class="text-muted">Total Registered</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #fff0f6, #ffdeeb);">
                <div class="card-body">
                    <h5 class="card-title">📂 Projects</h5>
                    <p class="card-text display-3 fw-bold text-pink">87</p>
                    <small class="text-muted">Active Projects</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0" style="background: linear-gradient(135deg, #ffe6f3, #ffd6e9);">
                <div class="card-body">
                    <h5 class="card-title">📝 Tasks</h5>
                    <p class="card-text display-3 fw-bold text-pink">340</p>
                    <small class="text-muted">Pending Tasks</small>
                </div>
            </div>
        </div>
    </div>
</div>
